#include <iostream>
using namespace std;

void heapify(int arr[], int n, int i, bool maxHeap) {
    int largestOrSmallest = i;  
    int left = 2 * i + 1;
    int right = 2 * i + 2;

  
    if (maxHeap) {
        if (left < n && arr[left] > arr[largestOrSmallest])
            largestOrSmallest = left;
        if (right < n && arr[right] > arr[largestOrSmallest])
            largestOrSmallest = right;
    } else {
        if (left < n && arr[left] < arr[largestOrSmallest])
            largestOrSmallest = left;
        if (right < n && arr[right] < arr[largestOrSmallest])
            largestOrSmallest = right;
    }

    if (largestOrSmallest != i) {
        swap(arr[i], arr[largestOrSmallest]);
        heapify(arr, n, largestOrSmallest, maxHeap);
    }
}

void heapSort(int arr[], int n, bool increasing) {
    bool maxHeap = increasing;   // increasing → max heap, decreasing → min heap

    for (int i = n / 2 - 1; i >= 0; i--)
        heapify(arr, n, i, maxHeap);

    for (int i = n - 1; i > 0; i--) {
        swap(arr[0], arr[i]);
        heapify(arr, i, 0, maxHeap);
    }
}

int main() {
    int arr[] = {12, 11, 13, 5, 6, 7};
    int n = 6;

    cout << "Original array:\n";
    for (int x : arr) cout << x << " ";
    cout << "\n";

    heapSort(arr, n, true); // true → increasing order

    cout << "Increasing order:\n";
    for (int x : arr) cout << x << " ";
    cout << "\n";

    int arr2[] = {12, 11, 13, 5, 6, 7};
    heapSort(arr2, n, false); // false → decreasing order

    cout << "Decreasing order:\n";
    for (int x : arr2) cout << x << " ";
    cout << "\n";
}
