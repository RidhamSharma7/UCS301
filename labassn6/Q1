## circular linked list:
#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
};

Node* head = NULL;

// Insert at beginning
void insertBegin(int x) {
    Node* temp = new Node{x, NULL};
    if (head == NULL) {
        head = temp;
        temp->next = head;
        return;
    }
    Node* last = head;
    while (last->next != head) last = last->next;

    temp->next = head;
    last->next = temp;
    head = temp;
}

// Insert at end
void insertEnd(int x) {
    Node* temp = new Node{x, NULL};
    if (head == NULL) {
        head = temp;
        temp->next = head;
        return;
    }
    Node* last = head;
    while (last->next != head) last = last->next;

    last->next = temp;
    temp->next = head;
}

// Insert after a node
void insertAfter(int key, int x) {
    if (head == NULL) return;
    Node* curr = head;
    do {
        if (curr->data == key) {
            Node* temp = new Node{x, curr->next};
            curr->next = temp;
            return;
        }
        curr = curr->next;
    } while (curr != head);
}

// Delete a node
void deleteNode(int key) {
    if (head == NULL) return;

    Node* curr = head;
    Node* prev = NULL;

    // If head node is to be deleted
    if (head->data == key) {
        Node* last = head;
        while (last->next != head) last = last->next;

        if (head->next == head) { // only 1 node
            delete head;
            head = NULL;
            return;
        }

        last->next = head->next;
        Node* del = head;
        head = head->next;
        delete del;
        return;
    }

    // Delete in between
    do {
        prev = curr;
        curr = curr->next;
        if (curr->data == key) {
            prev->next = curr->next;
            delete curr;
            return;
        }
    } while (curr != head);
}

// Search
bool searchNode(int key) {
    if (head == NULL) return false;
    Node* curr = head;
    do {
        if (curr->data == key) return true;
        curr = curr->next;
    } while (curr != head);
    return false;
}

// Display
void display() {
    if (head == NULL) return;
    Node* curr = head;
    do {
        cout << curr->data << " ";
        curr = curr->next;
    } while (curr != head);
    cout << "\n";
}

int main() {
    int choice, x, key;
    
    while (true) {
        cout << "\n---- Circular Linked List Menu ----\n";
        cout << "1. Insert at beginning\n2. Insert at end\n3. Insert after a node\n";
        cout << "4. Delete a node\n5. Search a node\n6. Display\n7. Exit\n";
        cout << "Enter choice: ";
        cin >> choice;

        switch (choice) {
            case 1: cout << "Enter value: "; cin >> x; insertBegin(x); break;
            case 2: cout << "Enter value: "; cin >> x; insertEnd(x); break;
            case 3: 
                cout << "Insert after which value? "; cin >> key;
                cout << "Enter value: "; cin >> x;
                insertAfter(key, x); 
                break;
            case 4: cout << "Delete value: "; cin >> key; deleteNode(key); break;
            case 5: cout << "Search value: "; cin >> key;
                    cout << (searchNode(key) ? "Found\n" : "Not Found\n");
                    break;
            case 6: display(); break;
            case 7: return 0;
        }
    }
}


## doubly linked list

#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* prev;
    Node* next;
};

Node* head = NULL;

void insertBegin(int x) {
    Node* temp = new Node{x, NULL, head};
    if (head != NULL) head->prev = temp;
    head = temp;
}

void insertEnd(int x) {
    Node* temp = new Node{x, NULL, NULL};
    if (head == NULL) { head = temp; return; }

    Node* curr = head;
    while (curr->next != NULL) curr = curr->next;

    curr->next = temp;
    temp->prev = curr;
}

void insertAfter(int key, int x) {
    Node* curr = head;
    while (curr && curr->data != key) curr = curr->next;
    if (!curr) return;

    Node* temp = new Node{x, curr, curr->next};
    if (curr->next) curr->next->prev = temp;
    curr->next = temp;
}

void deleteNode(int key) {
    Node* curr = head;
    while (curr && curr->data != key) curr = curr->next;
    if (!curr) return;

    if (curr->prev) curr->prev->next = curr->next;
    else head = curr->next;

    if (curr->next) curr->next->prev = curr->prev;

    delete curr;
}

bool searchNode(int key) {
    Node* curr = head;
    while (curr) {
        if (curr->data == key) return true;
        curr = curr->next;
    }
    return false;
}

void display() {
    Node* curr = head;
    while (curr) {
        cout << curr->data << " ";
        curr = curr->next;
    }
    cout << "\n";
}

int main() {
    int choice, x, key;
    
    while (true) {
        cout << "\n---- Doubly Linked List Menu ----\n";
        cout << "1. Insert at beginning\n2. Insert at end\n3. Insert after node\n";
        cout << "4. Delete a node\n5. Search\n6. Display\n7. Exit\n";
        cin >> choice;

        switch (choice) {
            case 1: cout << "Value: "; cin >> x; insertBegin(x); break;
            case 2: cout << "Value: "; cin >> x; insertEnd(x); break;
            case 3: cout << "Insert after? "; cin >> key;
                    cout << "Value: "; cin >> x;
                    insertAfter(key, x); break;
            case 4: cout << "Delete value: "; cin >> key; deleteNode(key); break;
            case 5: cout << "Search value: "; cin >> key;
                    cout << (searchNode(key) ? "Found\n" : "Not Found\n"); break;
            case 6: display(); break;
            case 7: return 0;
        }
    }
}
