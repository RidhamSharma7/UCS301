#include <iostream>
using namespace std;

int main() {
    int n = 5;
    int adj[5][5] = {
        {0,2,4,0,0},
        {0,0,1,7,0},
        {0,0,0,0,3},
        {0,0,0,0,1},
        {0,0,0,2,0}
    };

    int dist[5], visited[5] = {0};

    for(int i=0;i<n;i++) dist[i] = 9999;
    dist[0] = 0;

    for(int i=0;i<n;i++) {
        int u = -1;

        for(int j=0;j<n;j++)
            if(!visited[j] && (u==-1 || dist[j] < dist[u]))
                u = j;

        visited[u] = 1;

        for(int v=0; v<n; v++) {
            if(adj[u][v] && dist[u] + adj[u][v] < dist[v])
                dist[v] = dist[u] + adj[u][v];
        }
    }

    for(int i=0;i<n;i++)
        cout << "Distance to " << i << " = " << dist[i] << "\n";
}
