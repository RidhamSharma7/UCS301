#include <iostream>
using namespace std;
void rowColSum(int mat[MAXM][MAXM], int r, int c) {
   
    for (int i = 0; i < r; i++) {
        int sum = 0;
        for (int j = 0; j < c; j++) sum=sum+mat[i][j];
        cout << "Row " << i << " sum = " << sum << endl;
    }
    
    for (int j = 0; j < c; j++) {
        int sum = 0;
        for (int i = 0; i < r; i++) sum =sum+ mat[i][j];
        cout << "Col " << j << " sum = " << sum << endl;
    }
}

int main() {
    int r=3, c=3;
    int mat[MAXM][MAXM] = {
        {1, 2, 3},
        {4, 5, 6},
        {7, 8, 9}
    };
   rowColSum(mat, r, c);

   
}
